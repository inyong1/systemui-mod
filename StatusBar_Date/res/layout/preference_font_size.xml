<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:id="@+id/view_font_size"
	android:gravity="center_vertical|fill_horizontal"
	
	android:padding="10dp">

	<Button
		android:layout_height="wrap_content"
		style="?android:attr/buttonStyleSmall"
		android:text="+"
		android:background="@drawable/selector"
		android:layout_width="wrap_content"
		android:id="@+id/tombol_size_plus"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"/>

	<Button
		android:layout_height="wrap_content"
		style="?android:attr/buttonStyleSmall"
		android:text="-"
		android:background="@drawable/selector"
		android:layout_width="wrap_content"
		android:id="@+id/tombol_size_minus"
		android:layout_toLeftOf="@id/tombol_size_plus"
		android:layout_marginLeft="5dp"
		android:layout_marginRight="5dp"
		android:layout_centerVertical="true"/>

	<TextView
		android:layout_height="wrap_content"
		android:text="title"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content"
		android:id="@android:id/title"
		android:layout_alignParentLeft="true"
		android:layout_toLeftOf="@id/tombol_size_minus"/>

	<TextView
		android:layout_height="wrap_content"
		android:text="Small Text"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:layout_width="wrap_content"
		android:id="@android:id/summary"
		android:layout_alignParentLeft="true"
		android:layout_toLeftOf="@id/tombol_size_minus"
		android:layout_below="@id/android:id/title"/>

</RelativeLayout>

